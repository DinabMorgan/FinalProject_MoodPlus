@model MoodPlus.Models.Entry

@{
    ViewData["Title"] = "Delete";
}
@section Styles{
    <link rel="stylesheet" href="~/css/JournalDelete.css" asp-append-version="true" />
}


<h4>Are you sure you want to delete this?</h4>
<div style="word-wrap:break-word;">
    
   
    <dl class="BodyDelete">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" id="DeleteBtn" /> 
        <a id="backBtn" asp-action="Index">Go Back!</a>
    </form>
</div>
