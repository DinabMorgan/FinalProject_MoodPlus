<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoodPlus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoodPlus.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kanit">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=DynaPuff">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Figtree">
    <link rel="icon" href="/img/favicon.ico" type="image/ico"/> 
    @await RenderSectionAsync("Styles", required: false)
</head>
<body id = "mainBody">
    <header id = "mainHeader">
        @await RenderSectionAsync("Graph", required: false)
        <nav   class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div id = "mainNav" class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="AboutUs">Mood+</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">Menu
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div  class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Entry" asp-action="Index">Journal</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Note" asp-action="Inbox">Notes</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link " asp-controller="Patient" asp-action="Details" asp-route-id="@User.Identity.Name">Account</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Graph">Graph</a>
                            </li>
                        }

                         <li>
                            <label class="switch">
                                <input id="darkmodeSwitch" type="checkbox">
                                <span class="slider round"></span>
                            </label>
                        </li>

                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Help">Resources</a>
                            </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @await Component.InvokeAsync("Streak", new { userId=User.Identity.Name});  
                        }

                    </ul>
                        <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Mood+ - <a class ="MLink" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> - <a class ="MLink" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
